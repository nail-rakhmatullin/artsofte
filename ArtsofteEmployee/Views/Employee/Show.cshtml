@using ArtsofteEmployee.Models.Person;

@model IEnumerable<Employee>


@{
    ViewData["Title"] = "Employees";
}

<div class="container">
    @foreach (var employee in Model) {
        <div class="card">
            <div class="card-body">
                <p class="card-title">Name: @employee.Name</p>
                <p class="card-title">Surname: @employee.Surname</p>
                <p class="card-title">Age: @employee.Age</p>
                <p class="card-title">Gender: @employee.Gender</p>
                <p class="card-title">Department: @employee.Department.Name (@employee.Department.Floor)</p>
                <p class="card-title">Language: @employee.ProgrammingLanguage.Name</p>
                <a class="btn btn-success" asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id">Delete</a>
            </div>
        </div>
    }
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
